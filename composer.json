{
    "name": "nickyeoman/phpframework",
    "description": "Quick, easy to use framework.",
    "homepage": "https://www.nickyeoman.com",
    "type": "library",
    "license": "CC0-1.0",
    "authors": [
        {
            "name": "Nick Yeoman",
            "email": "c@nickyeoman.com",
            "homepage": "https://www.nickyeoman.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "erusev/parsedown": "^1.7",
        "php": "~8.0",
        "nette/mail": "^3.1.6",
        "vlucas/phpdotenv": "v5.4.1",
        "tracy/tracy": "v2.10.5",
        "twig/twig": "*",
        "symfony/yaml": "*",
        "nickyeoman/php-mysql-helper": "~2.0",
        "nickyeoman/php-validation-class": "~5.0",
        "nickyeoman/sasslibrary": "~2.0",
        "nickyeoman/nytwig": "~1.0"
    },
    "autoload": {
        "psr-4": { 
            "Nickyeoman\\\\Framework\\\\": "src/"
        }
    },
    "extra": {
        "versioning": {
            "strategy": "semantic-versioning"
        }
    },
    "scripts": {
        "lint": "phpcs src --standard=PSR2",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git://github.com/nickyeoman/php-validation-class.git"
        },
        {
            "type": "vcs",
            "url": "git://github.com/nickyeoman/sasslibrary.git"
        },
        {
            "type": "vcs",
            "url": "git://github.com/nickyeoman/nytwig.git"
        }
    ]
}
