{% set title = 'admin Pages' %}
{% extends "layout/master.html.twig" %}

{% block content %}
<h2>Edit a page</h2>
<div class="formContainer">

 <form action="/admin/save" method="post">
   <input type="hidden" name="formkey" value="{{ formkey }}" />
   <input type="hidden" name="id"      value="{{ info.id }}" />
   <input type="text"   name="title"   value="{{ info.title}}"  placeholder="Title" required>
   <input type="text"   name="slug"    value="{{ info.slug}}"   placeholder="slug"  required>
   <textarea id="nytinymce" name="body" rows="4" cols="50" placeholder="Enter your page content here.">{{ info.body }}</textarea>
   <input type="submit" value="Save Page" name="submit" />
 </form>
</div>
{% endblock %}
